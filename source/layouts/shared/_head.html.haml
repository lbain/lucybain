%meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
%meta{charset: "utf-8"}
%meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
- if current_page.data.description
  - raise "description too long" if current_page.data.description.length > 160
  %meta{name: "description", content:"#{current_page.data.description}"}
- if keywords(current_page.data)
  %meta{name: "keywords", content:"#{keywords(current_page.data)}"}
%link{href: "/images/favicon.ico", rel: "icon", type: "image/ico"}

%link{href: "http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Source+Code+Pro", rel: "stylesheet", type: "text/css"}
%title= current_page.data.title || "Lucy Bain"
= stylesheet_link_tag "application", media: "all"
%script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
%script{src:"//cdn.optimizely.com/js/4606022905.js"}